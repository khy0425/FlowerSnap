# 모든 텍스트 파일은 UTF-8로 처리
* text=auto eol=lf

# Dart 파일
*.dart text eol=lf encoding=utf-8

# YAML 파일
*.yaml text eol=lf encoding=utf-8
*.yml text eol=lf encoding=utf-8

# JSON 파일
*.json text eol=lf encoding=utf-8

# Markdown 파일
*.md text eol=lf encoding=utf-8

# 설정 파일
*.config text eol=lf encoding=utf-8
*.conf text eol=lf encoding=utf-8
*.properties text eol=lf encoding=utf-8

# 바이너리 파일
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf encoding=utf-8

# Android 파일
*.gradle text eol=lf encoding=utf-8
*.java text eol=lf encoding=utf-8
*.kt text eol=lf encoding=utf-8
*.xml text eol=lf encoding=utf-8

# iOS 파일
*.swift text eol=lf encoding=utf-8
*.m text eol=lf encoding=utf-8
*.h text eol=lf encoding=utf-8
*.plist text eol=lf encoding=utf-8

# 기타
*.txt text eol=lf encoding=utf-8
*.sh text eol=lf encoding=utf-8
*.bat text eol=crlf encoding=utf-8
*.ps1 text eol=crlf encoding=utf-8 